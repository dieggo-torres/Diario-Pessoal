<%- include('partials/header') -%> 
  <h1 class="mb-3">Escrever</h1>
  <form action="/compose" method="post">
    <div class="mb-3">
      <label for="titulo" class="form-label"><strong>Título</strong></label>
      <input class="form-control" type="text" name="titulo" placeholder="Digite o título da publicação">
    </div>
    <div class="mb-3">
      <label for="corpo" class="form-label"><strong>Corpo</strong></label>
      <textarea class="form-control" name="corpo" id="editor1" cols="30" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="publicar">Publicar</button>
  </form>
<%- include('partials/footer') -%> 